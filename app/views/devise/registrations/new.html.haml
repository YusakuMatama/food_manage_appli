.main_container_login
  %h1.login_top
    新規登録画面
  .container
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-horizontal", id:"form-margin"}) do |f|
      = render "devise/shared/error_messages", resource: resource
      .row
        .col-sm-2.login_text メールアドレス
        .col-sm-10.form-inline{style: "padding: 3px;"}
          = f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-control input-sm", id: "name", placeholder: 'メールアドレス'
      .row
        .col-sm-2.login_text
          パスワード
          %br
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上入力)
        .col-sm-10.form-inline{style: "padding: 3px;"}
          = f.password_field :password, autocomplete: "パスワード登録", class: "form-control input-sm", id: "name", placeholder: 'パスワード'
      .row
        .col-sm-2.login_text パスワード確認
        .col-sm-10.form-inline{style: "padding: 3px;"}
          = f.password_field :password_confirmation, autocomplete: "パスワード確認", class: "form-control input-sm", id: "name", placeholder: 'パスワード確認'
      .text-left{style: "padding: 30px 0 30px 0;"}
        = f.submit "登録", class: "btn btn-success", id: "delete-padding"
    = render "devise/shared/links"

